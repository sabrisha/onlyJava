<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC

        "-//Hibernate/Hibernate Mapping DTD//EN"

        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="db.entity.Client" table="station_client">

        <meta attribute="class-description">This class
            contains developer's details.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="fullName" column="full_name" type="string"/>
        <property name="telephone" column="telephone" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="user" column="user" type="int"/>
    </class>

</hibernate-mapping>