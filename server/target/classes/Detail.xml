<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC

        "-//Hibernate/Hibernate Mapping DTD//EN"

        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="db.entity.Detail" table="details">

        <meta attribute="class-description">This class
            contains developer's details.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="name" column="name" type="string"/>
        <property name="area" column="area" type="string"/>
        <property name="country" column="producing_country" type="string"/>
        <property name="price" column="price" type="float"/>
        <property name="count" column="quantity_in_stock" type="int"/>
    </class>

</hibernate-mapping>